{
  "name": "@eu-ge-ne/toy",
  "version": "0.0.13",
  "license": "MIT",
  "exports": "./main.ts",
  "workspace": ["app", "ui/*", "lib/*"],
  "compilerOptions": {
    "noUncheckedIndexedAccess": true
  },
  "lint": {
