{
  "name": "@eu-ge-ne/toy",
  "version": "0.0.28",
  "license": "MIT",
  "exports": "./main.ts",
  "workspace": ["app", "ui/*", "lib/*"],
  "compilerOptions": {
    "noUncheckedIndexedAccess": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "eqeqeq",
        "explicit-module-boundary-types",
        "explicit-function-return-type"
      ],
      "exclude": ["require-await", "no-control-regex"]
    }
  },
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.22",
    "@eu-ge-ne/kitty-keys": "jsr:@eu-ge-ne/kitty-keys@^0.10.0",
    "@eu-ge-ne/text-buf": "jsr:@eu-ge-ne/text-buf@^0.14.2"
  }
}
